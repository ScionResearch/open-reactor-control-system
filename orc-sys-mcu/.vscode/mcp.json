      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://supabase_admin:J2nF68cc4GsQCgRNnvyAAzNQ_BGVdRMq-dSb5GnOOxc@localhost:5433/postgres_instance1"
      ]
    }
